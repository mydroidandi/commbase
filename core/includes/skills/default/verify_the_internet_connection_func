function verify_the_internet_connection_func {
 tmux select-window -t 1 && tmux select-pane -t 4 &&  tmux send-keys "clear" C-m
 tmux send-keys "(bash $COMMBASE/Commbase/ping/desktop-shark-check-internet-connection-one-time.sh)" C-m
 #tmux send-keys "bash $COMMBASE/Commbase/ping/desktop-shark-check-internet-connection-one-time.sh" C-m
 amixer set Capture nocap &>/dev/null
 internal_random_yes_func 6 && tmux select-pane -t 1 && echo -e "\e[1;41mCOMMBASE:\e[1;m Run: ""verify the internet connection / verify internet connection"
 echo "verify the internet connection" >> .commbase_history
 tmux select-window -t 1 && tmux select-pane -t 4
 amixer set Capture cap &>/dev/null
 exit 99
}
