function run_skill_show_me_basic_system_information {
 tmux select-window -t 2
 tmux send-keys "clear" C-m ; tmux send-keys "clear" C-m
 tmux send-keys "neofetch" C-m
 amixer set Capture nocap &>/dev/null
 internal_random_yes 6 && echo -e "\e[1;41mCOMMBASE:\e[1;m Run: ""neofetch"
 echo "show me basic system information" >> .commbase_history
 amixer set Capture cap &>/dev/null
 exit 99
}
