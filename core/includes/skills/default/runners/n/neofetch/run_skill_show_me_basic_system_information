run_skill_show_me_basic_system_information() {
	amixer set Capture nocap &>/dev/null
	internal_random_yes 6 && tmux select-window -t 1 && tmux select-pane -t 1
	echo -e "\e[1;41mCOMMBASE:\e[1;m Run: ""show me basic system information"
	echo "show me basic system information" >> $COMMBASE_ROOT_DIR/commbase/history/.commbase_history
	tmux select-window -t 1 && tmux select-pane -t 4 && tmux send-keys "clear" C-m
	tmux send-keys "gnome-terminal -- bash -c '(neofetch); exec bash'" C-m
	tmux send-keys "clear" C-m
	amixer set Capture cap &>/dev/null
	exit 99
}

