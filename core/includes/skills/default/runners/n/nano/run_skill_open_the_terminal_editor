function run_skill_open_the_terminal_editor {
 tmux select-window -t 1 && tmux select-pane -t 4 &&  tmux send-keys "clear" C-m
 #tmux send-keys "(gnome-terminal -e nano)" C-m
 gnome-terminal -- bash -c "(nano); exec bash" C-m
 amixer set Capture nocap &>/dev/null
 internal_random_yes 6 && tmux select-pane -t 1 && echo -e "\e[1;41mCOMMBASE:\e[1;m Run: ""open the terminal editor"
 echo "open the terminal editor" >> $COMMBASE_ROOT_DIR/commbase/history/.commbase_history
 tmux select-window -t 1 && tmux select-pane -t 4
 amixer set Capture cap &>/dev/null
 exit 99
}
